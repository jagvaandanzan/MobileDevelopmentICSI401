<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSettings"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="657dp"
        android:layout_marginTop="66dp"
        app:icon="@drawable/ic_outline_settings_24" />

    <Button
        android:id="@+id/btnAddFromFile"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="599dp"
        android:layout_marginTop="66dp"
        app:icon="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/sourceTxt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/back"
        android:hint="@string/gadaadUg" />

    <TextView
        android:id="@+id/targetTxt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/sourceTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/back"
        android:hint="@string/mongolUg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/targetTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="@string/previous" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="0dp"
            android:text="@string/edit" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="0dp"
            android:text="@string/add" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="0dp"
            android:text="@string/delete" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="0dp"
            android:text="@string/next" />
    </LinearLayout>


</RelativeLayout>